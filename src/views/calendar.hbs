<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Food Menu</title>
  <link rel="stylesheet" href="https://unpkg.com/fullcalendar@5.10.0/main.css">
  <script src="https://unpkg.com/fullcalendar@5.10.0/main.js"></script>
</head>
<body>
  <div id="calendar"></div>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      var calendarEl = document.getElementById('calendar');
      var calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'timeGridWeek',
        events: '/events',
        timeZone: 'Asia/Kolkata', // Set the timezone to India
        initialDate: '2023-10-30', // Set an initial date if needed
      });
      calendar.render();
    });
  </script>
</body>
</html>
